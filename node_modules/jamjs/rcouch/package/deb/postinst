#!/bin/sh
# postinst script for rcouch
#
# see: dh_installdeb(1)

set -e


# create rcouch group
if ! getent group rcouch >/dev/null; then
        addgroup --system rcouch 
fi

# create raiak user
if ! getent passwd rcouch >/dev/null; then
        adduser --ingroup rcouch --home /var/lib/rcouch --disabled-password \
		--system --shell /bin/bash --no-create-home \
		--gecos "Refuge platform" rcouch
fi

chown -R rcouch:rcouch /var/lib/rcouch
chown -R rcouch:rcouch /var/run/rcouch
chown -R rcouch:rcouch /var/log/rcouch
chmod 0755 /var/run/rcouch /etc/rcouch 
chown -R rcouch:rcouch /usr/share/rcouch
chown rcouch:rcouch /etc/rcouch/local.ini

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

